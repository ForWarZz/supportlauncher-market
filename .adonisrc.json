{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands",
    "@adonisjs/lucid/build/commands",
    "@adonisjs/bouncer/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts"
  },
  "preloads": ["./start/routes", "./start/kernel", "./start/bouncer"],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/lucid",
    "@adonisjs/auth",
    "@adonisjs/view",
    "@adonisjs/ally",
    "@adonisjs/session",
    "@adonisjs/shield",
    "@adonisjs/lucid-slugify",
    "@adonisjs/bouncer",
    "./providers/CustomTagProvider",
    "./providers/StripeProvider"
  ],
  "metaFiles": [
    {
      "pattern": "public/**",
      "reloadServer": false
    },
    {
      "pattern": "resources/views/**/*.edge",
      "reloadServer": false
    },
    {
      "pattern": "./custom_modules/**",
      "reloadServer": false,
      "watch": false
    }
  ]
}
